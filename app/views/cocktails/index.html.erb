<header class="hero">
  <h1>Cocktails app</h1>
</header>


<div class="wrapper-index">
  <div class="container-index">

      <div class="cards-cocktail">
        <% @cocktails.each do |cocktail| %>
          <% if cocktail.photo.url.nil? %>
            <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('https://www.atelierdeschefs.com/media/recette-e7517-cocktail-blue-lagoon.jpg')">
              <%= link_to cocktail_path(cocktail) do %>
                <div class="layer">
                  <h3> <%= cocktail.name %> </h3>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
              <%= link_to cocktail_path(cocktail) do %>
                <div class="layer">
                  <h3> <%= cocktail.name %> </h3>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <%= link_to "Add a new cocktail", new_cocktail_path %>
  </div>
</div>




