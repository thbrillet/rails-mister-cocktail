<h1><%= @cocktail.name %></h1>
<ul>
  <% @doses.each do |dose| %>
    <li>
      <%= dose.name %>
    </li>
  <% end %>
</ul>
<%= link_to "Return to index", cocktails_path %>
<%= link_to "Edit", edit_cocktail_path(@cocktail) %>
<%= link_to 'Delete', cocktail_path(@cocktail), method: :delete %>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
